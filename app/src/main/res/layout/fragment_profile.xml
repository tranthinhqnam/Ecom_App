<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/avtprofile"
            tools:ignore="UnknownId" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_rounded_semibold"
            android:text="Lion Fischer "
            android:textColor="@color/primary_color"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_useremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_rounded_regular"
            android:text="lionfischer@gmail.com"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/custom_input"
                android:fontFamily="@font/sf_pro_rounded_regular"
                android:hint="Email"
                android:inputType="textPersonName"
                android:paddingHorizontal="30dp"
                android:textColor="@color/black"
                android:enabled="false"
                android:textColorHighlight="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/custom_input"
                android:fontFamily="@font/sf_pro_rounded_regular"
                android:hint="Username"
                android:inputType="textPersonName"
                android:paddingHorizontal="30dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <Button
                android:id="@+id/save"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="#2A9D8F"
                android:fontFamily="@font/sf_pro_rounded_regular"
                android:paddingVertical="10dp"
                android:text="Save"
                android:textSize="17dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="42dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/primary_color"
            android:fontFamily="@font/sf_pro_rounded_regular"
            android:text="Logout"
            android:textAllCaps="false"
            android:textSize="20dp"
            app:cornerRadius="20dp" />

    </LinearLayout>

</LinearLayout>